{
    "manifest_version": 2,
    "name": "Instagram Downloader",
    "version": "1.0",
    "icons": {
        "48": "icons/instagram.png"
    },
    "web_accessible_resources": [
        "icons/download.png"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*"
            ],
            "js": [
                "js/button.js",
                "js/hoverable.js",
                "js/main.js"
            ], 
            "css": [
                "css/main.css"
            ]
        }
    ],
    "applications": {
        "gecko": {
            "id": "InstagramDownloader@github.com"
        }
    }
}