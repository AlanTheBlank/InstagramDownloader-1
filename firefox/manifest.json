{
  "manifest_version": 2,
  "name": "Instagram Downloader",
  "version": "1.1",
  "icons": {
    "48": "icons/instagram.png"
  },
  "web_accessible_resources": [
    "icons/download.png",
    "icons/download_multiple.png"
  ],
  "permissions": [
    "notifications",
    "downloads"
  ],
  "background": {
    "scripts": [
      "js/download.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/button.js",
        "js/hoverable.js",
        "js/main.js"
      ],
      "css": [
        "css/main.css"
      ]
    }
  ],
  "applications": {
    "gecko": {
      "id": "InstagramDownloader@github.com"
    }
  }
}
