{
  "extends": "ts-config",
  "rules": {
    "ordered-imports": true,
    "no-non-null-assertion": false,
    "no-inferrable-types": false,
    "file-name-casing": [
      false,
      "kebab-case"
    ],
    "curly": {
      "options": "ignore-same-line"
    }
  },
  "linterOptions": {
    "exclude": [
      "**/lib/**",
      "**/node_modules/**"
    ]
  }
}
