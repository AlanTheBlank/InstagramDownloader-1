{
  "manifest_version": 2,
  "name": "Instagram Downloader",
  "version": "1.2",
  "icons": {
    "48": "icons/instagram.png"
  },
  "web_accessible_resources": [
    "icons/download.png",
    "icons/download_multiple.png"
  ],
  "permissions": [
    "downloads",
    "background"
  ],
  "background": {
    "page": "html/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "js": [
        "js/button.js",
        "js/hoverable.js",
        "js/main.js"
      ],
      "css": [
        "css/main.css"
      ]
    }
  ]
}